<h2>Welcome to Hogwarts, school of witchcraft and wizardry!</h2>
<h2>Our students:</h2>
<br>
<% @houses.each do |house| %>
<h3><%=house.name.capitalize%></h3>
<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th></th>
  </tr>
  <% house.students.each do |student| %>
  <tr>
    <td><%=student.format_name%></td>
    <td><%=student.age%></td>
    <td><a href="students/<%= student.id %>">Details</a></td>
  </tr>
  <% end %>
</table>
</br>
<% end %>
