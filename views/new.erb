<form action="/students" method="post">

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>
      <option value="<%= house.id %>"><%= house.name.capitalize %></option>
    <% end %>
  </select>
  <br>
  <label for="first_name_input">First Name:</label>
  <input type="text" id="first_name_input" name="first_name"/>
  <br>
  <label for="last_name_input">Last Name:</label>
  <input type="text" id="last_name_input" name="last_name"/>
  <br>
  <label for="age_input">Age:</label>
  <input type="number" id="age_input" name="age"/>
  <br><br>

  <input type="submit" value="Add Student">
</form>
