<form action="/students/<%= @student.id %>" method="post">

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>
      <option <%= "selected" if @student.house_id == house.id %> value="<%= house.id %>">
        <%= house.name.capitalize %>
      </option>
    <% end %>
  </select>
  <br>
  <label for="first_name_input">First Name:</label>
  <input type="text" id="first_name_input" name="first_name" value="<%=@student.first_name%>"/>
  <br>
  <label for="last_name_input">Last Name:</label>
  <input type="text" id="last_name_input" name="last_name" value="<%=@student.last_name%>"/>
  <br>
  <label for="age_input">Age:</label>
  <input type="number" id="age_input" name="age" value="<%=@student.age%>"/>
  <br><br>

  <input type="submit" value="Update">
</form>
